<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".activity.TemporaryControl">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/colorToolbarDefault"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">




        <ImageView android:layout_marginStart="15dp" android:layout_marginLeft="15dp"
            android:id="@+id/back"
            android:layout_width="26dp"
            android:layout_height="26dp" android:scaleType="fitCenter"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="通讯录"
            android:textColor="@android:color/white"
            android:textSize="20sp" />



    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/contacts" android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

    </android.support.v7.widget.RecyclerView>


    <com.example.apptest.androidprojectmonitor.feature.SideBar
        android:layout_width="30dp"
        android:layout_height="0dp" android:id="@+id/sidebar"
        app:layout_constraintBottom_toBottomOf="@+id/contacts"
        app:layout_constraintEnd_toEndOf="@+id/contacts"
        app:layout_constraintTop_toTopOf="@+id/contacts" />

</android.support.constraint.ConstraintLayout>